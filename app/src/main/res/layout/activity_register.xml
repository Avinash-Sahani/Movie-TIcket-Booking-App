<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegisterActivity"

    android:background="@color/black"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/register_photo"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/register_photo" />

            <EditText
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_photo"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttons"
                android:drawableStart="@drawable/email"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="2dp"
                android:textColor="@color/yellow"

                android:textColorHint="@color/yellow"

                />

            <EditText
                android:id="@+id/register_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_name"
                android:layout_marginHorizontal="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-3dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttons"
                android:drawableStart="@drawable/email"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="2dp"
                android:textColor="@color/yellow"
                android:layout_marginVertical="20dp"

                android:textColorHint="@color/yellow"

                />
            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_number"
                android:layout_marginHorizontal="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-3dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttons"
                android:drawableStart="@drawable/email"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="2dp"
                android:textColor="@color/yellow"
                android:layout_marginVertical="20dp"

                android:textColorHint="@color/yellow"

                />

            <EditText
                android:id="@+id/register_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_email"
                android:layout_marginHorizontal="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-3dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttons"
                android:drawableStart="@drawable/password"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="2dp"
                android:textColor="@color/yellow"
                android:layout_marginVertical="20dp"

                android:textColorHint="@color/yellow"

                />


            <Button
                android:id="@+id/register_button"
                android:layout_width="179dp"
                android:layout_height="44dp"
                android:layout_below="@id/register_pass"
                android:layout_centerInParent="true"
                android:layout_gravity="end|bottom"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttons"
                android:fontFamily="@font/g_bold"
                android:padding="5dp"


                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Create Account"
                android:textAllCaps="false"
                android:textColor="@color/yellow"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/register_already"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_button"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:padding="5dp"
                android:text="Already have An Account"
                android:textAlignment="center"
                android:textColor="@color/yellow"

                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </ScrollView>
</RelativeLayout>